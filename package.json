{
  "name": "findy-wallet-pwa",
  "version": "0.6.10",
  "license": "Apache-2.0",
  "dependencies": {
    "@apollo/client": "^3.7.16",
    "graphql": "^16.7.1",
    "grommet": "^2.32.2",
    "grommet-icons": "^4.11.0",
    "js-base64": "^3.7.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-linkify": "^1.0.0-alpha",
    "react-qr-reader": "^3.0.0-beta-1",
    "react-router-dom": "^6.14.0",
    "styled-components": "^5.3.11",
    "subscriptions-transport-ws": "^0.11.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && npm run build:version && npm run licenses:report",
    "build:version": "ver=$(node -pe \"require('./package.json').version\") && echo v$ver > build/version.txt",
    "format": "prettier --write src/**/*.{ts,tsx}",
    "licenses:report": "node ./tools/check-licenses.js report ./build/licenses.txt",
    "test": "react-scripts test",
    "test:lint": "eslint ./src",
    "test:e2e": "./e2e/test.sh",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app",
    "ignorePatterns": [
      "**/*_pb.js"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.2",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@types/react-linkify": "^1.0.0",
    "@types/react-router-dom": "^5.3.2",
    "@types/styled-components": "^5.1.26",
    "async": "^3.2.4",
    "husky": "^8.0.3",
    "js-green-licenses": "^4.0.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "react-scripts": "^5.0.1",
    "typescript": "^5.1.3"
  },
  "overrides": {
    "react-qr-reader": {
      "react": "$react",
      "react-dom": "$react-dom"
    }
  }
}
